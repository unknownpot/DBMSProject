  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());

    gtag('config', 'G-SC0N4WRXRD');
  </script>

  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/index.css">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link rel="icon" href="/images/verent.png" />
  <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
    integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
  <script src="/scripts/index.js"></script>
  <title>VeRent</title>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-light bg-light">
    <a href="/">
      <img id='nav-logo' src="/images/verent.png" alt="logo">
    </a>
    <p class='tagline'>You rent more than a Vehicle!</p>
    <div>
      <% if(admin) { %>
        <a class='nav-link' href="/addVehicle">Add Vehcile <i class="fas fa-plus"></i></a>
        <% } %>
          <a class='nav-link' href="/logout">Log Out <i class="fas fa-sign-out-alt"></i></a>
    </div>
  </nav>

  <!-- Body -->
  <div class='container'>
    <div class='row'>
      <div class='col-sm-6'>
        <h1>
          <%= user.fullname %>
        </h1>
        <h3 class='text-muted'>@<%= user.username %>
        </h3>
      </div>
      <div class='col-sm-6'>
        <img src="/images/user.png" alt="">
      </div>
    </div>
    <div id='transactions'>
      <h1>Transacations</h1>
      <% if(transactions.length===0) { %>
        <h5>No Transactions yet!</h5>
        <% } %>
          <% transactions.forEach((transaction)=> { %>
            <div class="card border-info review">
              <div class="card-body">
                <h5 class="card-title"><strong>
                    <%= transaction.vehicle.model %>
                  </strong></h5>
                <hr>
                <p class="card-text"><strong>Rented On: </strong>
                  <%= transaction.date.getDate() + '/' + transaction.date.getMonth() + '/' +
                    transaction.date.getFullYear() %>
                </p>
                <% if(transaction.returnedOn) { %>
                  <p class='card-text'><strong>Returned On: </strong>
                    <%= transaction.returnedOn.getDate() + '/' + transaction.returnedOn.getMonth() + '/' +
                      transaction.returnedOn.getFullYear() %>
                  </p>
                  <p class='card-text'><strong>Review: </strong>
                    <%= transaction.review.review %>
                  </p>
                  <p class='card-text'><strong>Rating: </strong>
                    <%= transaction.review.rating + '/5' %>
                  </p>
                  <p class='card-text'><strong>Total Cost: </strong>
                    <%= transaction.totalCost %>
                  </p>
                  <% } else { %>
                    <a class="btn btn-outline-info" role="button" href=<%='/return/' + transaction.id %>>Return
                      Vehicle</a>
                    <% } %>
              </div>
            </div>
            <% }) %>
    </div>
  </div>

  <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
  <!-- Jquery ka upr hai -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
    crossorigin="anonymous"></script>
</body>

</html>