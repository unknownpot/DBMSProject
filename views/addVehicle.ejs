    integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
  <title>VeRent</title>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-light bg-light">
    <a href="/">
      <img id='nav-logo' src="/images/verent.png" alt="logo">
    </a>
    <p class='tagline'>You rent more than a Vehicle!</p>
    <div>
      <a class='nav-link' href="/user/me">Profile <i class="far fa-user"></i></a>
      <a class='nav-link' href="/logout">Log Out <i class="fas fa-sign-out-alt"></i></a>
    </div>
  </nav>

  <!-- Body -->
  <div class='container'>
    <div class='card border-success'>
      <div class='card-body'>
        <form action="/addVehicle" id="addVehicleForm" method="POST" enctype="multipart/form-data">
          <div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" onchange="formChangeHandler()" name="vehicleType" id="car"
                value="car" checked>
              <label class="form-check-label" for="car">
                Car
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" onchange="formChangeHandler()" name="vehicleType" id="bike"
                value="bike">
              <label class="form-check-label" for="bike">
                Bike
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" onchange="formChangeHandler()" name="vehicleType"
                id="bicycle" value="bicycle">
              <label class="form-check-label" for="bicycle">
                Bicycle
              </label>
            </div>
          </div>
          <div class="form-group" id="plateNumberDiv">
            <label for="plateNumber">Vehicle Registration Number</label>
            <input type="text" class="form-control" id="plateNumber" name="plateNumber">
          </div>
          <div class="form-group">
            <label for="model">Model</label>
            <input type="text" class="form-control" id="model" name="model" required>
          </div>
          <div class="form-group" id="travelledDiv">
            <label for="travelled">Kilometers Travelled</label>
            <input type="number" class="form-control" id="travelled" name="travelled">
          </div>
          <div class="form-group">
            <label for="dailyRent">Daily Rent</label>
            <input type="number" class="form-control" id="dailyRent" name="dailyRent" required>
          </div>
          <div class="custom-file form-group">
            <input type="file" class="custom-file-input" id="customFile" name="uploadedImage" accept="image/*" required>
            <label id='file-input-label' class="custom-file-label" for="customFile">Choose Image</label>
          </div>
          <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
  <!-- Jquery ka upr hai -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
    crossorigin="anonymous"></script>
  <script src="/scripts/index.js"></script>
</body>

</html>